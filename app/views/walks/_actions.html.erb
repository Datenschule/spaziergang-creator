<% if @walk.editable_by? current_user %>
  <% if @walk.stations.count >= 2 %>
    <%= link_to route_walk_path(@walk), class: "btn tooltip", data: { tooltip: t('walk.course.label')} do %>
      <i data-feather="navigation"><%= t('walk.course.label') %></i>
    <% end %>
  <% end %>

  <%= link_to edit_walk_path(@walk), class: "btn tooltip", data: { tooltip: t('walk.edit')} do %>
    <i data-feather="edit-3"></i>
  <% end %>

  <%= render 'walks/delete_form' %>
<% end %>
