<div class="container">
  <div class="columns">
    <div class="column col-4 col-mx-auto">
      <h2><%= t 'signin.label'%></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :login, class: "form-label" %>
          <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit t('signin.label'), class: "btn btn-secondary" %>
        </div>
      <% end %>

      <div class="space-t">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
