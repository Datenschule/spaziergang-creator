<div class="container">
  <div class="columns">
    <div class="column col-8">
      <h1><%= @subject.name %></h1>
      <p><%= @subject.description %></p>
    </div>

    <div class="column col-2 col-ml-auto text-right">
      <% if @subject.editable_by? current_user %>
        <%= render("edit_link", sub: @subject) %>
        <%= render "delete_form" %>
      <% end %>
    </div>
  </div>

  <div class="columns">
    <div class="column col-11 col-ml-auto">
      <div class="columns space-t">
        <div class="column col-10">
          <h2><%= t('page.plural') %></h2>
          <p><%= pluralize(@pages.size, t('page.singular'), t('page.plural')) %></p>
        </div>
        <div class="column col-2 text-right">
          <p>
            <%= link_to new_subject_page_path(@subject),
            class: "btn tooltip",
              data: { tooltip: t('page.new_verb')} do %>
              <i data-feather="plus-circle"><%= t('page.new_verb') %></i>
            <% end %>
          </p>
        </div>
      </div>
      <% if @pages.first %>
        <ol class="column col-12">
          <% for page in @pages do %>
            <%= render("pages/list_item", page: page) %>
          <% end %>
        </ol>
      <% else %>
        <%=  render 'pages/empty' %>
      <% end %>
    </div>
  </div>
</div>
